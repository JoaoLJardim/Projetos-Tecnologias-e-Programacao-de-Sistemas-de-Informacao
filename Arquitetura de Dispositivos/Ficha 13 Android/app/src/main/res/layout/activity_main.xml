<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="@string/increase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonIncrease"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="188dp" app:layout_constraintHorizontal_bias="0.475"/>
    <TextView
            android:text="Temperatura:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="90dp" app:layout_constraintBaseline_toBaselineOf="@+id/textViewTemperatura"
            android:layout_marginStart="76dp"/>
    <TextView
            android:text="22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewTemperatura"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="10dp" android:layout_marginTop="117dp" android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/textView2"/>

</androidx.constraintlayout.widget.ConstraintLayout>